<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff99"
    tools:context="com.ashitech.sqlitedemo.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textStyle="italic|bold"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorAccent"
                android:gravity="center"/>
            <Button
                android:id="@+id/btnAddContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Contact"
                android:background="@color/colorAccent"
                android:textColor="#ffffff"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btnViewContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Contact"
                android:background="@color/colorAccent"
                android:textColor="#ffffff"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/btnSearchContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search contact"
                android:background="@color/colorAccent"
                android:textColor="#ffffff"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/btnUpdateContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Contact"
                android:background="@color/colorAccent"
                android:textColor="#ffffff"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/btnDeleteContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Contact"
                android:background="@color/colorAccent"
                android:textColor="#ffffff"
                android:layout_margin="10dp"/>


        </LinearLayout>
    </ScrollView>





</LinearLayout>
